@model Employee
@inject IEmployeeRepository _repository
@{
    ViewBag.title = "Creacion de empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<form asp-action="create" asp-controller="home" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="email"></label>
        <div class="col-sm-10">
            <input asp-for="email"/>
            <span asp-validation-for="email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="name"></label>
        <div class="col-sm-10" >
            <input asp-for="name"/>
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Department"></label>
        <select asp-for="Department" asp-items="Html.GetEnumSelectList<Department>()">
            <option value="">Por favor seleccione uno</option>
        </select>
         <span asp-validation-for="Department" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All">

    </div>
    
    <div >
        <button type="submit">Create</button>
    </div>
    <div >
       Total employee count = @_repository.GetEmployees().Count()
    </div>
</form>