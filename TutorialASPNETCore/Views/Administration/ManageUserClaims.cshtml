@model UserClaimViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Claims</h2>
        </div>
        <div class="card-body">
            <input hidden asp-for="@Model.userId" />
            @for (int i = 0; i < Model.userClaims.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.userClaims[i].ClaimType" />
                    <input asp-for="@Model.userClaims[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.userClaims[i].IsSelected">
                        @Model.userClaims[i].ClaimType
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <a asp-action="EditUser" asp-route-id="@Model.userId"
               class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>